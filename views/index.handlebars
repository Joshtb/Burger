<h1 class="text-info" id="header1"> Eat Da Burger!</h1>

<div class="jumbotron bg-danger">
  <h1 class="text-light">Burgers ready to be Devoured!</h1>
<ul class="text-info"id="readyburg">
  {{#each burgers}}
    {{#unless devoured}}
{{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>


<h2 class="text-light">Devoured Burgers</h2>
<ul class="text-info" id="eaten">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>






<h2 class="text-light">Add a Burger</h2>
<form class="create-form">

  <div class="form-group text-info">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

    <button type="submit">Add a Burger</button>

</form>
</div>